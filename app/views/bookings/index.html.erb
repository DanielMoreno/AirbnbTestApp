<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Schedule a new Booking", rooms_search_path, class: "sidebar-link" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Listings
			</div>
			<div class="panel-body">
				<% @bookings.each do |booking| %>
					<div class="row">
						<div class="col-md-7">
							<h4><%= booking.room.title %></h4>
						</div>
						<div class="col-md-3 right">
			  				<%= link_to "Room Info", room_path({id: booking.room.id}), class: "btn btn-primary" %> 
						</div>
					</div>
					<br>
					<%= form_for(booking, url: room_booking_path(booking.room.id, booking.id), html: { method: :delete }) do |f| %>
					  <div class="actions">
					    <%= f.submit "Cancel Booking" %>
					  </div>
					<% end %>
					<br>
					<div class="row">
						<div class="col-md-12">
							<h2>Confirmation Status</h2>
							<p><%= booking.confirmation_status %></p>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<h2>Nightly Price: </h2>
							<%= booking.price %>
						</div>
						<div class="col-md-6">
							<h2>Total: </h2>
							<%= booking.total %>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<h2>Start Date: </h2>
							<%= booking.start_date %>
						</div>
						<div class="col-md-6">
							<h2>End Date: </h2>
							<%= booking.end_date %>
						</div>
					</div>
					<hr>
				<% end %>
			</div>
		</div>
	</div>
</div>